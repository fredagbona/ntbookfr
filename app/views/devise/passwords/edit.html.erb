<div class="row">
<div class="col-lg-3">
</div>
  <div class="col-lg-6">
    <section class=" border rounded border-3 p-4 m-4">          
          
          <h2 class="text-center">Changer mon mot de passe</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="col-auto">
              <%= f.label :password, "Nouveau mot de passe", class: "form-label" %><br />
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em><br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
            </div><br>

            <div class="col-auto">
              <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", class: "form-label" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div><br>

            <div class="col-auto">
              <%= f.submit "Modifier mon mot de passe" class: "btn btn-success w-100" %>
            </div><br>
          <% end %>

          <%= render "devise/shared/links" %>
 </section>
  </div>
<div class="col-lg-3">
</div>
</div>
